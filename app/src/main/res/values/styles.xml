<resources>

    <!-- This style is for the splash screen -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>




    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:itemBackground">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/prompt_regular</item>
        <!--  This will change ActionBar BackgroundColor to Black -->
        <item name="colorSurface">@color/colorPrimaryDark</item>
        <!--  This will change ActionBar TextColor to White  -->

    </style>


    <!--    STYLE BUTTON IMAGES CATEGORY-->
    <style name="ButtonCategory" >
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <!--    TEXT STYLE Category -->
    <style name="TextCategory">
        <item name="android:fontFamily">@font/prompt_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">0.01</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


    <style name="PromptTextViewStyle">
        <item name="android:fontFamily">@font/prompt_regular</item>
    </style>
    <style name="MySpinnerLook"
        parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff0000</item>
    </style>



    <!--    TEXT STYLE NORMAL -->
    <style name="TextRead">
        <item name="android:fontFamily">@font/prompt_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextRead</item>

    </style>
    <!--    TEXT STYLE White -->

    <!--    TEXT STYLE NORMAL FOR READING -->
    <style name="TextReadMore">
        <item name="android:fontFamily">@font/prompt_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextRead</item>
        <item name="lineHeight">18sp</item>

    </style>
    <!--    TEXT STYLE White -->

    <style name="TextWhite">
        <item name="android:fontFamily">@font/prompt_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>


    <!--    TEXT STYLE GARY -->
    <style name="TextGray">
        <item name="android:fontFamily">@font/prompt_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextGray</item>
    </style>


    <!--    DRAW LINE-->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#989898</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>

    </style>

    <!--    BUTTON STYLE Primary-->
    <style name="buttonPrimary">
        <item name="android:fontFamily">@font/prompt_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>


    <!--    BUTTON STYLE Primary Border-->
    <style name="buttonPrimaryBorder">
        <item name="android:fontFamily">@font/prompt_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
    </style>


    <!--    BUTTON STYLE Secondary-->
    <style name="buttonSecondary">
        <item name="android:fontFamily">@font/prompt_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="backgroundTint">@color/colorTextSecond</item>
    </style>

    <!-- =====  PLACE DETAIL  NAME======-->
    <style name="textPlaceDetailName">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="lineHeight">19sp</item>
        <item name="android:fontFamily">@font/prompt_regular</item>
    </style>

    <!-- =====  PLACE DETAIL READ TEXT=====-->
    <style name="textPlaceDetailReadText">
        <item name="android:fontFamily">@font/prompt_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextRead</item>
        <item name="lineHeight">16sp</item>
    </style>
    <!--    PLACE DETAIL LINK -->
    <style name="textPlaceDetailTextLink">
        <item name="android:fontFamily">@font/prompt_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>



    <!--   LIST VIEW NAME-->
    <style name="textListViewName">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textStyle">normal</item>
        <item name="lineHeight">17sp</item>
        <item name="android:fontFamily">@font/prompt_regular</item>
    </style>

    <!--   LIST VIEW TAG-->
    <style name="textListViewTag">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:textStyle">normal</item>
        <item name="lineHeight">13sp</item>
        <item name="android:fontFamily">@font/prompt_regular</item>
    </style>

    <!--   SEARCH INPUT-->
    <style name="textSearchInput">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/colorTextSecond</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/prompt_regular</item>
    </style>

    <!--  SETTING TEXT -->
    <style name="textSetting">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/prompt_regular</item>
    </style>

    <!--    TEXT WEB View Warning-->
    <style name="TextWebViewHeader">
        <item name="android:fontFamily">@font/prompt_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--    TEXT STYLE White (Close -->
    <style name="TextWhiteClose">
        <item name="android:fontFamily">@font/prompt_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>




</resources>
